<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:layout_margin="10dp"
    android:paddingBottom="10dp">
<ImageView
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:id="@+id/product_pic"
    android:src="@drawable/pic2"
    android:scaleType="fitCenter"
    android:background="@color/teal_50_transpanrent"/>
    <com.example.chen.finder.viewhelper.CustomFontTextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Canvas Home"
        android:textSize="13sp"
        android:textColor="@color/transparent_black_eighty"
        app:textFont="Roboto_Medium"
        android:gravity="center"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <com.example.chen.finder.viewhelper.CustomFontTextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$8"
        android:textSize="13sp"
        app:textFont="Roboto_Thin"
        android:gravity="center"
        />
    <com.example.chen.finder.viewhelper.CustomFontTextView
        android:id="@+id/product_price_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="$8"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        />
</LinearLayout>
</LinearLayout>