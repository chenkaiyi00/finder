<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rectangle_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info_container">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product2"
        android:gravity="center"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/user_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
       android:layout_toRightOf="@+id/user_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:theme="@style/text_tittle_name"
        android:text="Sean"/>
    <TextView
        android:id="@+id/review_time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/user_id"
        android:layout_toRightOf="@+id/user_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:theme="@style/text_time"
        android:text="May 2015"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_container"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content"
    android:text="The apartment was absolutely gorgeous and I was give a small tour of the neighbourhood straight away! Thanks again! The are was great, as it was my first time in Chicago I was a bit concerned at the beginning but it turned out to be right in the center of everything! I will definitely return the next time I visit Chicago!"
    android:theme="@style/text_tittle_name"
    />
    </LinearLayout>
</RelativeLayout>